<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav"
    app:startDestination="@id/mainPage">

    <fragment
        android:id="@+id/mainPage"
        android:name="com.ugurtansal.tarif_defteri.fragments.MainPage"
        android:label="fragment_main_page"
        tools:layout="@layout/fragment_main_page" >
        <action
            android:id="@+id/main_to_foods_screen"
            app:destination="@id/foodNamesFragment" />
    </fragment>
    <fragment
        android:id="@+id/foodNamesFragment"
        android:name="com.ugurtansal.tarif_defteri.fragments.FoodNamesFragment"
        android:label="fragment_food_names"
        tools:layout="@layout/fragment_food_names" >
        <action
            android:id="@+id/foodNames_to_detail"
            app:destination="@id/detailFragment" />
        <action
            android:id="@+id/foodNames_to_update"
            app:destination="@id/updateFragment2" />
        <argument
            android:name="category"
            app:argType="com.ugurtansal.tarif_defteri.data.Category" />
    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.ugurtansal.tarif_defteri.fragments.DetailFragment"
        android:label="fragment_detail"
        tools:layout="@layout/fragment_detail" >
        <action
            android:id="@+id/detail_to_update"
            app:destination="@id/updateFragment2" />
        <argument
            android:name="foodObject"
            app:argType="com.ugurtansal.tarif_defteri.data.Food" />
    </fragment>
    <fragment
        android:id="@+id/updateFragment2"
        android:name="com.ugurtansal.tarif_defteri.fragments.UpdateFragment"
        android:label="fragment_update"
        tools:layout="@layout/fragment_update" >
        <argument
            android:name="foodObject"
            app:argType="com.ugurtansal.tarif_defteri.data.Food"
            app:nullable="true" />
        <argument
            android:name="categoryId"
            app:argType="integer" />
        <argument
            android:name="foodList"
            app:argType="com.ugurtansal.tarif_defteri.data.Food[]"
            app:nullable="true"
            android:defaultValue="@null" />
    </fragment>
</navigation>